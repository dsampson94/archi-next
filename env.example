# Archi Environment Variables
# Copy this file to .env.local for development

# ===========================================
# APP CONFIG
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Archi

# ===========================================
# DATABASE (Supabase/PostgreSQL)
# ===========================================
DATABASE_URL="postgresql://user:password@localhost:5432/archi?schema=public"
POSTGRES_URL_NON_POOLING="postgresql://user:password@localhost:5432/archi?schema=public"

# ===========================================
# SUPABASE (Auth & Storage)
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# AUTHENTICATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# ===========================================
# AI / LLM PROVIDERS
# ===========================================
OPENAI_API_KEY=sk-your-openai-key

# Anthropic (optional alternative)
ANTHROPIC_API_KEY=sk-your-anthropic-key

# ===========================================
# VECTOR DATABASE (Choose one)
# ===========================================
# Pinecone
PINECONE_API_KEY=your-pinecone-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX=archi-docs

# OR use Supabase pgvector (no extra config needed)

# ===========================================
# WHATSAPP / TWILIO
# ===========================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Meta Cloud API (alternative)
META_WHATSAPP_TOKEN=your-meta-token
META_WHATSAPP_PHONE_ID=your-phone-id

# ===========================================
# FILE STORAGE (S3 / Supabase Storage)
# ===========================================
# AWS S3 (optional)
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=eu-west-1
AWS_S3_BUCKET=archi-documents

# Or use Supabase Storage (included with Supabase)

# ===========================================
# ANALYTICS & MONITORING
# ===========================================
VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Sentry (optional)
SENTRY_DSN=https://your-sentry-dsn

# ===========================================
# EMAIL (for notifications)
# ===========================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@archi.ai

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_VOICE_NOTES=true
ENABLE_ANALYTICS=true
